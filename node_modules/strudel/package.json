{
  "name": "strudel",
  "version": "1.0.5",
  "description": "A front-end framework for back-end powered web.",
  "main": "dist/strudel.js",
  "module": "dist/strudel.esm.js",
  "browser": "dist/strudel.esm.js",
  "sideEffects": false,
  "files": [
    "dist/*.js",
    "src"
  ],
  "author": "Mateusz ≈Åuczak <mateusz.luczak@outlook.com>",
  "license": "MIT",
  "directories": {
    "example": "examples"
  },
  "watch": {
    "build": "src/**/*.js"
  },
  "scripts": {
    "dev": "npm-watch",
    "dev:test": "karma start test/unit/karma.dev.config.js",
    "dev:examples": "http-server . | opener http://127.0.0.1:8080/examples",
    "build": "node scripts/build.js",
    "test": "NODE_ENV=test npm run lint && npm run test:unit && npm run test:e2e && npm run test:cover",
    "test:unit": "karma start test/unit/karma.unit.config.js",
    "test:cover": "karma start test/unit/karma.cover.config.js",
    "test:e2e": "node test/e2e/runner.js",
    "test:sauce": "node test/e2e/runner.js --config ./test/e2e/sauce.config.js --test tabs --env chrome,firefox,ie11,edge,safari,android,iphone",
    "lint": "eslint src",
    "release": "bash scripts/release.sh",
    "release:notes": "node scripts/release-notes.js",
    "commit": "git-cz"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verify-commit-msg.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/strudeljs/strudel"
  },
  "bugs": "https://github.com/strudeljs/strudel/issues",
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^7.1.5",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.7.0",
    "buble": "^0.19.3",
    "buble-register": "^1.0.1",
    "chalk": "^2.4.1",
    "chromedriver": "^2.32.3",
    "codecov": "^2.1.0",
    "commitizen": "^2.10.1",
    "conventional-changelog": "^2.0.1",
    "cross-spawn": "^5.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "http-server": "^0.10.0",
    "istanbul": "^0.4.5",
    "jasmine-core": "^3.1.0",
    "karma": "^2.0.5",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^1.1.2",
    "karma-mocha-reporter": "^2.2.5",
    "karma-safari-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "lint-staged": "^7.2.0",
    "nightwatch": "^0.9.14",
    "nightwatch-helpers": "^1.2.0",
    "npm-watch": "^0.3.0",
    "opener": "^1.4.3",
    "puppeteer": "^1.6.2",
    "rollup": "^0.62.0",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-replace": "^2.0.0",
    "saucelabs": "^1.4.0",
    "selenium-server": "^3.3.1",
    "shelljs": "^0.7.8",
    "uglify-js": "^3.0.15",
    "webpack": "^4.16.4",
    "yorkie": "^1.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
